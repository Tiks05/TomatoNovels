@using Microsoft.AspNetCore.Components.Routing
@using TomatoNovels.Client

<Router AppAssembly="@typeof(TomatoNovels.Client._Imports).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" />
    </Found>

    <NotFound>
        <div class="w-screen h-screen flex flex-col items-center justify-center bg-gray-50 text-gray-800 select-none">

            <!-- 大标题 404 -->
            <h1 class="text-7xl font-extrabold bg-gradient-to-r from-red-500 to-orange-400 bg-clip-text text-transparent animate-pulse mb-4">
                404
            </h1>

            <!-- 副标题 -->
            <p class="text-2xl font-semibold mb-2">
                页面不存在
            </p>

            <!-- 描述 -->
            <p class="text-gray-500 mb-8">
                哦不，你访问的页面可能已经被删除或更名。
            </p>

            <!-- 按钮 -->
            <NavLink href="/login/pwd"
                     class="px-6 py-3 rounded-xl bg-gradient-to-r from-red-500 to-orange-400 text-white font-bold shadow-lg shadow-red-200 hover:scale-105 hover:shadow-xl transition-all duration-300">
                返回首页
            </NavLink>
        </div>
    </NotFound>
</Router>
